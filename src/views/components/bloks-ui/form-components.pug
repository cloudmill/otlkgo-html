
mixin input
  .input-wrapper(data-input-parent='')
    .input-wrapper__placeholder
      |#{attributes.placeholder}
    input.input(data-input='' required)&attributes(attributes)
    +stop-svg.input-wrapper-svg

mixin textarea
  .input-wrapper(data-input-parent='')
    .input-wrapper__placeholder
      |#{attributes.placeholder}
    textarea.textarea(data-input='')&attributes(attributes)

